<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="search_result"
    tools:context=".SearchResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="136dp"
            android:layout_height="243dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/account_icon" />

        <TextView
            android:id="@+id/taxes"
            android:layout_width="134dp"
            android:layout_height="17dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/sf_pro"
            android:text="@string/taxes"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_per_night" />

        <TextView
            android:id="@+id/price_per_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/sf_pro"
            android:text="pricePerNight"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/covid_rating" />

        <TextView
            android:id="@+id/city_booking"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro"
            android:text="city"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/location_image"
            app:layout_constraintTop_toBottomOf="@+id/covid_rating" />

        <TextView
            android:id="@+id/hotel_name_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sf_pro"
            android:text="hotelName"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/gym"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/price_per_night"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/gym"
            app:tint="#53C437" />

        <ImageView
            android:id="@+id/parking"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/wheelchair_access"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/parking"
            app:tint="#53C437" />

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gym"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/wifi"
            app:tint="#53C437" />

        <ImageView
            android:id="@+id/wheelchair_access"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/wifi"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/wheelchair"
            app:tint="#53C437" />

        <TextView
            android:id="@+id/covid_rating"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro"
            android:text="covidRating"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/covid_rating_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_rating" />

        <ImageView
            android:id="@+id/city_image"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/taxes"
            app:layout_constraintTop_toBottomOf="@+id/city_booking"
            app:srcCompat="@drawable/check"
            app:tint="#53C437" />

        <TextView
            android:id="@+id/hotel_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_pro"
            android:text="hotelRating"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/hotel_rating_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_name_booking" />

        <ImageView
            android:id="@+id/covid_rating_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_rating_image"
            app:srcCompat="@drawable/shield"
            app:tint="#418EF4" />

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toBottomOf="@+id/covid_rating_image"
            app:srcCompat="@drawable/location"
            app:tint="#de5246" />

        <ImageView
            android:id="@+id/hotel_rating_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star"
            app:tint="#F4BC41" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>