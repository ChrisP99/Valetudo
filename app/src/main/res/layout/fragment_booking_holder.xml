<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBookingHolder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="376dp"
        android:layout_height="343dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="138dp"
            android:layout_height="343dp"
            android:layout_marginStart="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/account_icon" />

        <TextView
            android:id="@+id/city_booking"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro"
            android:text="city"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/location_image"
            app:layout_constraintTop_toBottomOf="@+id/covid_rating" />

        <TextView
            android:id="@+id/check_in_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/sf_pro"
            android:text="checkin"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toBottomOf="@+id/location_image" />

        <TextView
            android:id="@+id/hotel_name_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sf_pro"
            android:text="hotelName"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/covid_rating"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro"
            android:text="covidRating"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/covid_rating_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_rating" />

        <TextView
            android:id="@+id/hotel_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_pro"
            android:text="hotelRating"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/hotel_rating_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_name_booking" />

        <ImageView
            android:id="@+id/covid_rating_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toBottomOf="@+id/hotel_rating_image"
            app:srcCompat="@drawable/shield"
            app:tint="#418EF4" />

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toBottomOf="@+id/covid_rating_image"
            app:srcCompat="@drawable/location"
            app:tint="#de5246" />

        <ImageView
            android:id="@+id/hotel_rating_image"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toEndOf="@+id/hotel_image"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star"
            app:tint="#F4BC41" />

        <TextView
            android:id="@+id/check_out_fragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sf_pro"
            android:text="checkout"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/your_booking_reference_fragment"
            app:layout_constraintEnd_toStartOf="@+id/check_out_fragment"
            app:layout_constraintStart_toEndOf="@+id/check_in_fragment"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/booking_ref"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="123dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/sf_pro"
            android:gravity="center"
            android:text="ref"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hotel_image" />

        <TextView
            android:id="@+id/your_booking_reference_fragment"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_pro"
            android:gravity="center"
            android:text="@string/your_booking_reference"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/booking_ref"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hotel_image" />

        <TextView
            android:id="@+id/amount_paid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sf_pro"
            android:text="amountPaid"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>